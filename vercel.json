{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "functions": {
    "api/health.js": {
      "maxDuration": 10
    },
    "api/chat/messages.js": {
      "maxDuration": 10
    },
    "api/chat/rooms.js": {
      "maxDuration": 10
    },
    "api/chat/upload.js": {
      "maxDuration": 10
    },
    "api/image/optimize.js": {
      "maxDuration": 15
    },
    "api/errors/monitor.js": {
      "maxDuration": 10
    },
    "api/performance/monitor.js": {
      "maxDuration": 10
    }
  },
  "env": {
    "VITE_API_BASE": "${VITE_API_BASE}",
    "VITE_SOCKET_URL": "${VITE_SOCKET_URL}",
    "NODE_ENV": "production",
    "LOG_LEVEL": "INFO",
    "ALLOWED_ORIGINS": "*"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains"
        }
      ]
    },
    {
      "source": "/api/image/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "regions": ["iad1"]
}

