{
  "version": 2,
  "builds": [
    { "src": "client/vite.config.js", "use": "@vercel/static-build", "config": { "distDir": "client/dist" } }
  ],
  "env": {
    "VITE_API_BASE": "${VITE_API_BASE}",
    "VITE_SOCKET_URL": "${VITE_SOCKET_URL}"
  },
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/client/index.html" }
  ]
}

