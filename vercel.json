{
  "version": 2,
  "builds": [
    { 
      "src": "client/package.json", 
      "use": "@vercel/static-build"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30
    }
  },
  "env": {
    "VITE_API_BASE": "${VITE_API_BASE}",
    "VITE_SOCKET_URL": "${VITE_SOCKET_URL}",
    "NODE_ENV": "production",
    "LOG_LEVEL": "INFO"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "regions": ["iad1"],
  "framework": "vite"
}

