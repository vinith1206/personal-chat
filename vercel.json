{
  "version": 2,
  "builds": [
    { "src": "client/package.json", "use": "@vercel/static-build" }
  ],
  "build": {
    "env": {
      "VERCEL": "1"
    }
  },
  "env": {
    "VITE_API_BASE": "${VITE_API_BASE}",
    "VITE_SOCKET_URL": "${VITE_SOCKET_URL}"
  },
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}

